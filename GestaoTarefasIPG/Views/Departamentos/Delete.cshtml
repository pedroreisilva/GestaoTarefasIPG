@model GestaoTarefasIPG.Models.Departamentos

@{
    ViewData["Title"] = "Delete";
}



<h5>Tem a certeza que pretende eliminar ?</h5>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
                Nome do departamento:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeDepartamento)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idDepartamento" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>