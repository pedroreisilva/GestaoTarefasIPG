@model GestaoTarefasIPG.Models.PaginationViewModel;

@{
    ViewData["Title"] = "Index";
}

<h4>Departamentos</h4>
<br />
<p>

<p>
    <a asp-action="Create"><input type="submit" value="Criar Novo" class="btn btn-danger" /></a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Procurar por nome: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Procurar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-outline-info">Voltar à lista</a>
        </p>
    </div>
</form>
<br />
<br />

<table class="table">
    <thead>
        <tr>

            <th>
                Nome do departamento:
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Departamentos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeDepartamento)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idDepartamento"><input type="submit" value="Editar" class="btn btn-danger" /></a> |
                    <a asp-action="Details" asp-route-id="@item.idDepartamento"><input type="submit" value="Detalhes" class="btn btn-danger" /></a> |
                    <a asp-action="Delete" asp-route-id="@item.idDepartamento"><input type="submit" value="Apagar" class="btn btn-danger" /></a>
                </td>
            </tr>
        }
    </tbody>
    
</table>

@for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++){
    @if (i == Model.CurrentPage)
    {
        <a href="#" class="btn btn-info">@i</a>
    }
    else
    {
        <a asp-action="Index" asp-route-page="@i"
           class="btn btn-outline-info">@i</a>
    }
 }
<br />
<br />
<br />