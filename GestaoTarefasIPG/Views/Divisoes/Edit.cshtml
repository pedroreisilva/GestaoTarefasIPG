@model GestaoTarefasIPG.Models.Divisoes

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Divisão</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idDivisao" />
            <div class="form-group">
                <label asp-for="NumDivisao" class="control-label"></label>
                <input asp-for="NumDivisao" class="form-control" />
                <span asp-validation-for="NumDivisao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}