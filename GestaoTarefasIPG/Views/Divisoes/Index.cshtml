

@model GestaoTarefasIPG.Models.DivisoesViewModel;
@{
    ViewData["Title"] = "Index";
}

<h4>Divisões</h4>
<br />
<p>
    <a asp-action="Create"><input type="submit" value="Criar Novo" class="btn btn-danger" /></a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Procurar por nome: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Procurar" class="btn btn-danger" />
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
               Divisões
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Divisoes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumDivisao)

                   
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idDivisao"><input type="submit" value="Editar" class="btn btn-danger" /></a> |
                    <a asp-action="Details" asp-route-id="@item.idDivisao"><input type="submit" value="Detalhes" class="btn btn-danger" /></a> |
                    <a asp-action="Delete" asp-route-id="@item.idDivisao"><input type="submit" value="Apagar" class="btn btn-danger" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
{
    @if (i == Model.CurrentPage)
    {
        <a href="#" class="btn btn-info">@i</a>
    }
    else
    {
        <a asp-action="Index" asp-route-page="@i"
           class="btn btn-outline-info">@i</a>
    }
}