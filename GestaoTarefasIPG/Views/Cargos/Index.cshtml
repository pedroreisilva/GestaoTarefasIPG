@model GestaoTarefasIPG.Models.PaginationViewModel;

@{
    ViewData["Title"] = "Index";
}

<h4>Cargos</h4>

<br />
<p>
    <a class="btn btn-danger" asp-action="Create">Criar Novo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome do cargo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cargos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCargo)
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Edit" asp-route-id="@item.idCargo">Editar</a> |
                    <a class="btn btn-danger" asp-action="Details" asp-route-id="@item.idCargo">Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idCargo">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


    @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
    {
        @if (i == Model.CurrentPage)
        {
            <a href="#" class="btn btn-info">@i</a>
        }
        else
        {
            <a asp-action="Index" asp-route-page="@i"
               class="btn btn-outline-info">@i</a>
        }
    } 